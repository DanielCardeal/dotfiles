" --- Configurações gerais
set scrolloff=10
set number
set relativenumber
set clipboard+=unnamed
set ignorecase
set smartcase
set incsearch
set hlsearch
set ideajoin

" --- Plugins
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'justinmk/vim-sneak'
Plug 'machakann/vim-highlightedyank'

" --- Keybindings
let mapleader = " "

inoremap jk <esc>

nnoremap <leader>, gT
nnoremap <leader>. gt

nnoremap <leader>wv <C-w>v
nnoremap <leader>ws <C-w>s
nnoremap <leader>wh <C-w>h
nnoremap <leader>wj <C-w>j
nnoremap <leader>wk <C-w>k
nnoremap <leader>wl <C-w>l
nnoremap <leader>ww <C-w>w
nnoremap <leader>wq :close<cr>

" NOTE: não usar variações "nnoremap" para mappings que usam <Action>(...), isso causa erros.
nmap <leader>e <Action>(ShowErrorDescription)
nmap [e <Action>(GotoPreviousError)
nmap ]e <Action>(GotoNextError)

nmap <leader>fs <Action>(SaveAll)
nmap <leader>z <Action>(ToggleDistractionFreeMode)

nmap <leader>cr <Action>(RenameElement)
nmap <leader>cf <Action>(ReformatCode)
vmap <leader>cf <Action>(ReformatCode)
nmap <leader>ce <Action>(Refactorings.QuickListPopupAction)
nmap <leader>ca <Action>(ShowIntentionActions)

nnoremap <leader>E :edit ~/.ideavimrc <cr>
nnoremap <leader>D :edit ~/.ideavimrc <cr>
